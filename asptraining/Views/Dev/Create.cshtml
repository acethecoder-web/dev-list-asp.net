@model Developer

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h2>ADD Developer</h2>
				</div>
				<div class="card-body">
					<form asp-action="Create" method="post">
						@* <div asp-validation-summary="All" class="text-danger"></div> *@
						<div class="form-group mb-3">
							<label asp-for="DevFirstName" class="form-label">First Name:</label>
							<input asp-for="DevFirstName" class="form-control" style="text-transform: uppercase;" oninput="this.value = this.value.toUpperCase()" placeholder="Enter First Name" />
							<span asp-validation-for="DevFirstName" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="DevLastName" class="form-label">Last Name:</label>
							<input asp-for="DevLastName" class="form-control" style="text-transform: uppercase;" oninput="this.value = this.value.toUpperCase()" placeholder="Enter Last Name" />
							<span asp-validation-for="DevLastName" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="DevMiddleName" class="form-label">Middle Name:</label>
							<input asp-for="DevMiddleName" class="form-control" style="text-transform: uppercase;" oninput="this.value = this.value.toUpperCase()" placeholder="Enter Middle Name" />
							<span asp-validation-for="DevMiddleName" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Specialty" class="form-label">Specialty::</label>
							<input asp-for="Specialty" class="form-control" style="text-transform: uppercase;" oninput="this.value = this.value.toUpperCase()" placeholder="Enter Specialty" />
							<span asp-validation-for="Specialty" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="HireDate" class="form-label">Hiredate:</label>
							<input asp-for="HireDate" type="date" class="form-control" />
							<span asp-validation-for="HireDate" class="text-danger"></span>
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-success">Create</button>
							<a asp-controller="Dev" class="btn btn-danger" asp-action="Index">Back to List</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}